<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:id="@+id/introduction"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_movieimg"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:background="@mipmap/default_pic">



        <ImageButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7.5dp"
            android:background="@mipmap/back" />

        <ImageButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/back"
            android:layout_alignStart="@+id/back"
            android:layout_marginBottom="16dp"
            android:background="@mipmap/player" />

    </RelativeLayout>

    <TextView
        android:id="@+id/moviename"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="视频名字占卜公寓"
        android:textColor="#383838"
        android:textSize="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_updatecount"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="更新至第1集"
            android:textColor="#767676"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/tv_movietime"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_toRightOf="@id/tv_updatecount"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/tv_datetime"
            android:gravity="center"
            android:text="片长20：20"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#767676"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/tv_updatecount"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="上传时间 2015—12-12 20：43"
            android:textColor="#767676"
            android:textSize="11dp" />

        <ImageView
            android:layout_width="0.5dp"
            android:layout_height="50dp"
            android:layout_alignLeft="@+id/ll_buttons"
            android:background="#767676" />

        <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="137dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_download"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/down" />

                <TextView
                    android:id="@+id/tv_cache"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="缓存"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@mipmap/share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="分享"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/movie_introduced"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:textColor="#767676"
        android:textSize="13sp" />

</LinearLayout>
