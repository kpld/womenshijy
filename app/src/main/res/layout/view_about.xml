<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <include
        android:id="@+id/head"
        layout="@layout/layout_head" />
<LinearLayout
    android:id="@+id/about_log"
    android:layout_below="@+id/head"
    android:layout_width="match_parent"
    android:layout_height="339dp"
    android:gravity="center"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/about_log" />
    <TextView

        style="@style/about_text"
        android:text="版本号v1.0.1"/>
    <TextView
        style="@style/about_text"
        android:text="关注微信账号：全景360度无死角美女观察营" />
</LinearLayout>
    <RelativeLayout
        android:id="@+id/user_agreement"
        android:layout_below="@id/about_log"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_toRightOf="@id/iv_about"
            android:paddingLeft="6dp"
            style="@style/mine_text"
            android:text="用户协议"/>
        <ImageView
            android:id="@+id/enter_user_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@mipmap/enter"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/feedback"
        android:layout_marginTop="2dp"
        android:layout_below="@id/user_agreement"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_toRightOf="@id/iv_about"
            android:paddingLeft="6dp"
            style="@style/mine_text"
            android:text="建议反馈"/>
        <ImageView
            android:id="@+id/enter_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:src="@mipmap/enter"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/translucentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:layout_below="@+id/head"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
            android:id="@+id/ll_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:visibility="gone"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户须知"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_agreement"
                android:textColor="#000000"
               android:layout_margin="10dp"
                android:textSize="17sp"/>
        </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/ll_advice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            android:gravity="center">
            <EditText
                android:id="@+id/et_advice"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="8"
                android:layout_marginLeft="5dp"/>
            <Button
                android:id="@+id/bt_advice"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="发送"
                android:textColor="#ffffff"
                android:background="#48000000"/>
        </LinearLayout>


    </FrameLayout>


</RelativeLayout>